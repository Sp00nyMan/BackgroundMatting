#:import is_android camera
<CameraControl>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1

<ColouredButton>:
    background_normal: (0.2, 0.2, 0.2, 0.5)
    background_down: (0.3, 0.3, 0.3, 1)
    radius: dp(5)
    font_size: self.height / 2
    color: (1, 1, 1, 1)
    canvas:
        Color:
            rgba: self.background_normal if self.state == 'normal' else self.background_down
        RoundedRectangle:
            pos: self.x + self.padding, self.y + self.padding
            size: self.width - 2 * self.padding, self.height - 2 * self.padding
            radius: [(self.radius, self.radius)] * 4

<AppLayout>:
    orientation: "vertical"
    CameraControl:
        id: cdw
    BoxLayout:
        id: buttons_dropdown
        pos_hint: {}
        size_hint: 1, None
        height: dp(50)
        pos: root.x, root.top - self.height + (1. - root._buttons_visible_fraction) * self.height
        orientation: "horizontal"
        canvas:
            Color:
                rgba: 0.4, 0.4, 0.4, 0.4
            Rectangle:
                pos: self.pos
                size: self.size
        ColouredButton:
            text: "P"
            on_release: app.toggle_preview()
        ColouredButton:
            id: button_change
            text: "C"
            on_release: root.change_camera()
        ColouredButton:
            id: button_resolution
            text: root.starting_resolution.upper()
            on_release: root.change_resolution()
        Label:
            id: fps
            font_size: self.height / 2
            text: ""