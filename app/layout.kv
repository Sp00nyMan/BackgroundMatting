#:import is_android camera
<DisplayControl>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1

<MyLabel>
    size_hint: 1, None

    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        RoundedRectangle:
            pos: self.x + dp(2), self.y + dp(2)
            size: self.width - 2 * dp(2), self.height - 2 * dp(2)
            radius: [(dp(5), dp(5))] * 4

<ColouredButton>:
    background_normal: (0.2, 0.2, 0.2, 0.5)
    background_down: (0.3, 0.3, 0.3, 1)
    radius: dp(5)
    font_size: self.height / 2
    color: (1, 1, 1, 1)
    canvas:
        Color:
            rgba: self.background_normal if self.state == 'normal' else self.background_down
        RoundedRectangle:
            pos: self.x + self.padding, self.y + self.padding
            size: self.width - 2 * self.padding, self.height - 2 * self.padding
            radius: [(self.radius, self.radius)] * 4

<AppLayout>:
    orientation: "vertical"
    DisplayControl:
        id: cdw
    BoxLayout:
        id: buttons_dropdown
        pos_hint: {}
        size_hint: 1, None
        height: dp(50)
        pos: root.x, root.top - self.height + (1. - root._buttons_visible_fraction) * self.height
        orientation: "horizontal"
        canvas:
            Color:
                rgba: 0.4, 0.4, 0.4, 0.4
            Rectangle:
                pos: self.pos
                size: self.size
        ColouredButton:
            text: "P"
            on_release: app.toggle_preview()
        ColouredButton:
            id: button_change
            text: "C"
            on_release: root.change_camera()
        ColouredButton:
            id: button_resolution
            text: root.starting_resolution.upper()
            on_release: root.change_resolution()
        ColouredButton:
            id: debug_action
            text: "ACTION"
            on_release: app.action()
        Label:
            id: fps
            font_size: self.height / 2
            text: ""
    MyLabel:
        id: msg
        opacity: self._msg_opacity

        height: dp(50)
        pos: root.x, 0

        font_size: self.height / 2
        halign: 'left'